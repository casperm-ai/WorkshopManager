@{
    ViewData["Title"] = "New Customer";
}

<div class="text-center">
    <h1 class="display-4">New Customer</h1>
    <p>Please fill in the required information below to add a new customer.</p>
</div>

<form class="formcenter">
    <div class="divcenter">
        <input type="text" placeholder="Name" />
        <br>
        <br>
        <input type="text" placeholder="Surname" />
        <br>
        <br>
        <input value="Mobile No." type="number" placeholder="Mobile No." />
        <br>
        <br>
        <input value="Tel No." type="number" placeholder="Tel No." />
        <br>
        <br>
        <input type="text" placeholder="Address" />
        <br>
        <br>
        <input type="email" placeholder="Email-Address" />
        <br>
        <br>
        <button type="submit">Submit</button>
    </div>
</form>
