@{
    ViewData["Title"] = "New Booking";
}

<div class="text-center">
    <h1 class="display-4">New Booking</h1>
    <p>Please fill the details below to make a new booking.</p>
</div>
<form class="formcenter">
    <div class="divcenter">
        <input type="number" placeholder="Vehicle ID" />
        <br>
        <br>
        <input type="text" placeholder="Condition of Vehicle" />
        <br>
        <br>
        <input type="text" placeholder="Description" />
        <br>
        <br>
        <input type="text" placeholder="Customer Comments" />
        <br>
        <br>
        <input type="email" placeholder="Email-Address" />
        <br>
        <br>
        <button type="submit">Submit</button>
    </div>
</form>